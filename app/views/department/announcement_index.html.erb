<%= render 'left_bar' %>
<% content_for :top_bar do -%>
<%= render :template => "shared/top_bar" %>
<% end -%>
<%= render 'right_bar' %>
<% content_for :main_content do -%>
<% if !@department.announcements.nil? %>
  <% for announcement in @department.announcements -%>
   <div class="announce">
    <fieldset class="fieldset-style radius6">
      <legend class="legend-style"> <%= image_tag "announcement.png" %>  </legend>
        <h3><%=announcement.title%></h3>
        <span><%= announcement.content  %></span>
      </legend>
    </fieldset>
    </div>
  <% end -%>
  
<% end %>
<% end -%>

<% content_for :breadcrumb do -%>
  <li class="active">
   <span class="divider">/</span>
   <i class="icon-list-alt"></i>
   Announcements
  </li>

  <% end -%>
