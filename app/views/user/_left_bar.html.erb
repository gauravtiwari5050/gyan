              <%= link_to "Reset pass", '/users/' + @user.id.to_s + '/profile/resetpass' %>
            </div>
            <div class="clearfix"></div>
            <div id="bold-box-big">
              <%= link_to 'Edit contact details', '/users/' + @user.id.to_s + '/contact/edit' %>
            </div>
            <div class="clearfix"></div>
          <% end %>
        </div>
