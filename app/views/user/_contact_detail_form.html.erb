
<h2> Edit contact details </h2>
<%= form_for(@contact_detail,:html =>{:class => 'form-stacked',:multipart => true},:url => 'update' ,:method => :put) do |f| %>
  <% if  !flash[:alert].nil?%>
    <div class="alert-message error">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if  !flash[:notice].nil?%>
    <div class="alert-message success">
      <%= flash[:notice] %>
    </div>
  <% end -%>

  <% if @contact_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact_detail.errors.count, "error") %> prohibited this contact_detail from being saved:</h2>

      <ul>
      <% @contact_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :address1 %><br />
    <%= f.text_field :address_1 %>
  </div>

  <div class="field">
    <%= f.label :address2 %><br />
    <%= f.text_field :address_2 %>
  </div>
  <div class="field">
    <%= f.label :address3 %><br />
    <%= f.text_field :address_3 %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
