<h3> Please add your message for students for using IVRS </h3>
<%= form_for(@ivrs_info,:html =>{:class => 'form-stacked',:multipart => true},:url => 'update' ,:method => :put) do |f| %>
  <% if @ivrs_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ivrs_info.errors.count, "error") %> prohibited this ivrs_info from being saved:</h2>

      <ul>
      <% @ivrs_info.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if  !flash[:alert].nil?%>
    <div class="alert-message error">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if  !flash[:notice].nil?%>
    <div class="alert-message success">
      <%= flash[:notice] %>
    </div>
  <% end -%>

  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

