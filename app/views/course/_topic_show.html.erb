<div class="forum-topic ui-corner-all">
  <h3 class="ui-corner-all"> <%= @topic.title %></h3>
  <p> 
     <%= @topic.description  %>  
  </p>
</div>
<h3>Posts</h3>
<% for post in @topic.posts -%>
<div class="forum-post ui-corner-all">
  <span class="ui-corner-all"><%= post.user.username %> wrote <%= time_ago_in_words(post.updated_at)%> ago </span>
  <p> <%=post.content%> </p>
</div>
</br>
<% end -%>



<h3>New post </h3>
<%= form_for(@post,:html =>{:class => 'form-stacked',:multipart => true},:url => @topic.id.to_s+'/create_post' ,:method => :post) do |f| %>
  <%= render :template => "shared/notices" %>
  <%= render :template => "shared/form-errors",:locals => {:form => @post} %>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  
  <div class="actions">
    <%= f.submit nil,:class => 'btn btn-large btn-primary'%>
  </div>
  
<% end -%>
