<h2>Submit your solution</h2>
<%= form_for(@assignment_solution,:html =>{:class => 'form-stacked',:multipart => true},:url => 'create' ,:method => :put) do |f| %>
  <%= render :template => "shared/notices" %>
  <%= render :template => "shared/form-errors",:locals => {:form => @assignment_solution} %>
  <% if @grade == true %>
    <div class="field">
      <%= f.label :marks %>
      <%= f.text_field :marks %>
    </div>
    
  <% else %>
    <div class="field">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>
    </br>

  <%= f.fields_for :appfile do |af| -%>
    <div class="field">
      <%= af.label :name %>
      <%= af.text_field :name %>
    </div>

    <div class="field">
      <%= af.file_field :content %>
    </div>
  <% end -%>
    
  <% end %>  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
